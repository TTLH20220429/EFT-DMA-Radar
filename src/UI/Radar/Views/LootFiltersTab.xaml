<UserControl x:Class="LoneEftDmaRadar.UI.Radar.Views.LootFiltersTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:LoneEftDmaRadar.UI.Radar.Views"
             xmlns:vm="clr-namespace:LoneEftDmaRadar.UI.Radar.ViewModels"
             xmlns:misc="clr-namespace:LoneEftDmaRadar.UI.Misc"
             xmlns:loot="clr-namespace:LoneEftDmaRadar.UI.Loot"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <!-- 设计时数据上下文 -->
    <d:UserControl.DataContext>
        <d:DesignInstance Type="{x:Type vm:LootFiltersViewModel}"
                          IsDesignTimeCreatable="False" />
    </d:UserControl.DataContext>

    <!-- 十六进制字符串 ↔ 画笔/颜色 转换器 -->
    <UserControl.Resources>
        <misc:StringToBrushConverter x:Key="StringToBrushConverter" />
        <misc:StringToColorConverter x:Key="StringToColorConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!-- 过滤器选择器 -->
            <RowDefinition Height="Auto" />
            <!-- 添加条目行 -->
            <RowDefinition Height="*" />
            <!-- 主网格 -->
        </Grid.RowDefinitions>

        <!-- 第0行：过滤器选择器 -->
        <StackPanel Orientation="Horizontal"
                    Margin="5"
                    Grid.Row="0">
            <CheckBox Content="启用"
                      IsChecked="{Binding CurrentFilterEnabled, Mode=TwoWay}"
                      VerticalAlignment="Center"
                      Margin="0,0,10,0" />
            <ComboBox ItemsSource="{Binding FilterNames}"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      SelectedItem="{Binding SelectedFilterName, Mode=TwoWay}"
                      Width="150"
                      Margin="0,0,10,0" />
            <Button Content="新增"
                    Command="{Binding AddFilterCommand}"
                    Margin="0,0,5,0" />
            <Button Content="重命名"
                    Command="{Binding RenameFilterCommand}"
                    Margin="0,0,5,0" />

            <Button Content="删除"
                    Command="{Binding DeleteFilterCommand}"
                    Margin="0,0,10,0" />
            <TextBlock Text="颜色:"
                       VerticalAlignment="Center"
                       Margin="0,0,5,0" />
            <xctk:ColorPicker SelectedColor="{Binding CurrentFilterColor, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"
                              DisplayColorAndName="True"
                              Width="150" />
        </StackPanel>

        <!-- 第1行：添加新条目 -->
        <StackPanel Orientation="Horizontal"
                    Margin="5"
                    Grid.Row="1">
            <ComboBox x:Name="ItemSelector"
                      ItemsSource="{Binding FilteredItems, Mode=OneWay}"
                      ScrollViewer.VerticalScrollBarVisibility="Auto"
                      SelectedItem="{Binding SelectedItemToAdd, Mode=TwoWay}"
                      DisplayMemberPath="Name"
                      Width="400"
                      Margin="0,0,10,0">
                <ComboBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel />
                    </ItemsPanelTemplate>
                </ComboBox.ItemsPanel>
            </ComboBox>
            <TextBox Text="{Binding ItemSearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Delay=300}"
                     Width="200"
                     Margin="0,0,10,0"
                     VerticalAlignment="Center" />
            <Button Content="添加"
                    Command="{Binding AddEntryCommand}"
                    VerticalAlignment="Center" />
        </StackPanel>

        <!-- 第2行：带内置颜色选择器的条目网格 -->
        <DataGrid ItemsSource="{Binding Entries}"
                  AutoGenerateColumns="False"
                  Grid.Row="2"
                  Margin="5"
                  EnableRowVirtualization="True"
                  EnableColumnVirtualization="True"
                  ScrollViewer.CanContentScroll="True"
                  VirtualizingStackPanel.IsVirtualizing="True"
                  VirtualizingStackPanel.VirtualizationMode="Recycling">

            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="启用"
                                        Binding="{Binding Enabled, Mode=TwoWay}" />

                <DataGridTextColumn Header="物品ID"
                                    Binding="{Binding ItemID, Mode=TwoWay}" />

                <DataGridTextColumn Header="物品名称"
                                    Binding="{Binding Name}"
                                    IsReadOnly="True" />

                <DataGridTemplateColumn Header="类型"
                                        Width="150">
                    <!-- 显示当前枚举名称 -->
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Type}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>

                    <!-- 在编辑模板中使用下拉框 -->
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <ComboBox ItemsSource="{Binding DataContext.FilterEntryTypes,
                                    RelativeSource={RelativeSource AncestorType=UserControl}}"
                                      SelectedItem="{Binding Type, Mode=TwoWay}"
                                      Width="140" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn Header="备注"
                                    Binding="{Binding Comment, Mode=TwoWay}" />

                <!-- 颜色列：颜色样本和内置Xceed颜色选择器 -->
                <DataGridTemplateColumn Header="颜色">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Border Width="16"
                                    Height="16"
                                    Background="{Binding ExplicitColor, Converter={StaticResource StringToBrushConverter}}"
                                    BorderBrush="Black"
                                    BorderThickness="1" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <xctk:ColorPicker SelectedColor="{Binding ExplicitColor, Mode=TwoWay, Converter={StaticResource StringToColorConverter}}"
                                              DisplayColorAndName="True"
                                              Width="150" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellEditingTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>