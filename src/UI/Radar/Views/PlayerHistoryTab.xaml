<UserControl x:Class="LoneEftDmaRadar.UI.Radar.Views.PlayerHistoryTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:LoneEftDmaRadar.UI.Radar.Views"
             xmlns:vm="clr-namespace:LoneEftDmaRadar.UI.Radar.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800">

    <!-- 设计时视图模型 -->
    <d:UserControl.DataContext>
        <d:DesignInstance Type="{x:Type vm:PlayerHistoryViewModel}"
                          IsDesignTimeCreatable="False" />
    </d:UserControl.DataContext>

    <Grid>
        <DataGrid ItemsSource="{Binding Entries}"
                  SelectedItem="{Binding SelectedEntry}"
                  MouseDoubleClick="DataGrid_MouseDoubleClick"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  HeadersVisibility="Column"
                  CanUserSortColumns="False"
                  Margin="4"
                  EnableRowVirtualization="True"
                  EnableColumnVirtualization="True"
                  ScrollViewer.CanContentScroll="True"
                  VirtualizingStackPanel.IsVirtualizing="True"
                  VirtualizingStackPanel.VirtualizationMode="Recycling">

            <DataGrid.Columns>
                <DataGridTextColumn Header="玩家名称"
                                    Binding="{Binding Profile.Name}"
                                    Width="Auto"
                                    MinWidth="250" />
                <DataGridTextColumn Header="账号ID"
                                    Binding="{Binding Profile.AccountID}"
                                    Width="Auto"
                                    MinWidth="80" />
                <DataGridTextColumn Header="账号类型"
                                    Binding="{Binding Profile.Acct}"
                                    Width="Auto"
                                    MinWidth="50" />
                <DataGridTextColumn Header="阵营"
                                    Binding="{Binding Profile.PlayerSide}"
                                    Width="Auto"
                                    MinWidth="100" />
                <DataGridTextColumn Header="击杀/死亡比"
                                    Binding="{Binding Profile.Overall_KD, StringFormat={}{0:N1}}"
                                    Width="Auto"
                                    MinWidth="50" />
                <DataGridTextColumn Header="总时长"
                                    Binding="{Binding Profile.Hours}"
                                    Width="Auto"
                                    MinWidth="60" />
                <DataGridTextColumn Header=" raids次数"
                                    Binding="{Binding Profile.RaidCount}"
                                    Width="Auto"
                                    MinWidth="50" />
                <DataGridTextColumn Header="存活率%"
                                    Binding="{Binding Profile.SurvivedRate, StringFormat={}{0:N1}}"
                                    Width="Auto"
                                    MinWidth="50" />
                <DataGridTextColumn Header="队伍ID"
                                    Binding="{Binding Profile.GroupID}"
                                    Width="Auto"
                                    MinWidth="50" />
                <DataGridTextColumn Header="警告次数"
                                    Binding="{Binding Profile.Alerts}"
                                    Width="Auto"
                                    MinWidth="80" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>