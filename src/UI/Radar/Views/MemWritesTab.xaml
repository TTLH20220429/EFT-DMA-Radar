<UserControl x:Class="LoneEftDmaRadar.UI.Radar.Views.MemWritesTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:LoneEftDmaRadar.UI.Radar.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Padding="10">
    <d:UserControl.DataContext>
        <d:DesignInstance Type="{x:Type vm:MemWritesViewModel}" IsDesignTimeCreatable="False" />
    </d:UserControl.DataContext>

    <UserControl.Resources>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="#11151F" />
        <SolidColorBrush x:Key="CardBorderBrush" Color="#1F2532" />
        <SolidColorBrush x:Key="AccentBrush" Color="#5DA8FF" />
        <SolidColorBrush x:Key="WarningBrush" Color="#F3B04D" />
        <SolidColorBrush x:Key="DangerBrush" Color="#EF596F" />
        <SolidColorBrush x:Key="ForegroundBrush" Color="#E6EDF3" />
        <SolidColorBrush x:Key="MutedBrush" Color="#9BA7B6" />
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical" Margin="0,0,0,10">

            <!-- 严重警告 -->
            <Border Background="{StaticResource CardBackgroundBrush}"
                    BorderBrush="{StaticResource DangerBrush}"
                    BorderThickness="1"
                    CornerRadius="10"
                    Padding="12"
                    Margin="0,0,0,12">
                <DockPanel>
                    <Border Background="{StaticResource DangerBrush}"
                            Width="4"
                            CornerRadius="4"
                            DockPanel.Dock="Left" />
                    <StackPanel Margin="12,0,0,0">
                        <TextBlock Text="内存写入功能风险极高"
                                   FontWeight="SemiBold"
                                   FontSize="16"
                                   Foreground="{StaticResource ForegroundBrush}" />
                        <TextBlock TextWrapping="Wrap"
                                   Foreground="{StaticResource MutedBrush}"
                                   Margin="0,6,0,0">
                            这些功能直接修改游戏内存，极易被检测标记。一旦被发现，大概率会导致账号封禁。
                        </TextBlock>
                        <TextBlock TextWrapping="Wrap"
                                   Foreground="{StaticResource MutedBrush}"
                                   Margin="0,6,0,0">
                            仅当你接受该风险，且明白此功能不会模拟正常玩家行为时，再继续使用。
                        </TextBlock>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- 总开关控制 -->
            <GroupBox Header="总控制" Margin="0,0,0,12">
                <Border Background="{StaticResource CardBackgroundBrush}"
                        BorderBrush="{StaticResource CardBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="10"
                        Padding="12">
                    <StackPanel>
                        <CheckBox Content="启用内存写入功能"
                                  IsChecked="{Binding Enabled, Mode=TwoWay}"
                                  FontWeight="SemiBold"
                                  FontSize="14"
                                  Foreground="{StaticResource ForegroundBrush}"
                                  Margin="0,0,0,10" />

                        <TextBlock Text="任何内存写入功能都必须开启此总开关才能运行。"
                                   TextWrapping="Wrap"
                                   Foreground="{StaticResource MutedBrush}"
                                   FontSize="12"
                                   Margin="0,0,0,4" />

                        <TextBlock Text="关闭此开关将禁用下方所有选项。"
                                   TextWrapping="Wrap"
                                   Foreground="{StaticResource MutedBrush}"
                                   FontSize="12" />
                    </StackPanel>
                </Border>
            </GroupBox>

            <UniformGrid Columns="2" Rows="0" Margin="0,0,0,12">

                <!-- 静默瞄准 -->
                <GroupBox Header="静默瞄准" Margin="0,0,12,12">
                    <Border Background="{StaticResource CardBackgroundBrush}"
                            BorderBrush="{StaticResource CardBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="12">
                        <StackPanel IsEnabled="{Binding Enabled}">
                            <CheckBox Content="启用静默瞄准"
                                      IsChecked="{Binding MemoryAimEnabled, Mode=TwoWay}"
                                      FontWeight="SemiBold"
                                      Foreground="{StaticResource ForegroundBrush}"
                                      Margin="0,0,0,10" />

                            <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                <TextBlock Text="目标骨骼："
                                           VerticalAlignment="Center"
                                           Foreground="{StaticResource ForegroundBrush}"
                                           Margin="0,0,8,0" />
                                <ComboBox ItemsSource="{Binding AvailableBones}"
                                          SelectedItem="{Binding MemoryAimTargetBone, Mode=TwoWay}"
                                          Width="200" />
                            </StackPanel>

                            <TextBlock Text="在内存中修改射击方向，而非移动鼠标。"
                                       TextWrapping="Wrap"
                                       Foreground="{StaticResource MutedBrush}"
                                       FontSize="12"
                                       Margin="0,0,0,6" />

                            <TextBlock Text="与设备自瞄共用同一个瞄准键，无需设备自瞄的硬件支持。"
                                   TextWrapping="Wrap"
                                   Foreground="{StaticResource ForegroundBrush}"
                                   FontSize="12"
                                   Margin="0,0,0,10" />

                            <Border Background="#151C29"
                                    BorderBrush="{StaticResource CardBorderBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="10"
                                    Margin="0,6,0,0">
                                <StackPanel>
                                    <TextBlock Text="工作原理"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource AccentBrush}" />
                                    <TextBlock TextWrapping="Wrap"
                                               Foreground="{StaticResource MutedBrush}"
                                               FontSize="12"
                                               Margin="0,4,0,0">
                                        - 按住瞄准键计算当前目标的方向向量
                                        - 计算后的向量直接写入内存
                                        - 子弹将沿该向量飞行，无需任何鼠标移动
                                        - 所有设备自瞄设置（视野范围、预测、过滤）仍然生效
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <Border Background="#1A1618"
                                    BorderBrush="{StaticResource DangerBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="10"
                                    Margin="0,10,0,0">
                                <StackPanel>
                                    <TextBlock Text="检测风险：极高"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource DangerBrush}" />
                                    <TextBlock Text="静默瞄准行为对抗作弊系统来说极其明显。"
                                               TextWrapping="Wrap"
                                               Foreground="{StaticResource MutedBrush}"
                                               FontSize="12"
                                               Margin="0,4,0,0" />
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </GroupBox>

                <!-- 无后坐力 -->
                <GroupBox Header="无后坐力" Margin="0,0,12,12">
                    <Border Background="{StaticResource CardBackgroundBrush}"
                            BorderBrush="{StaticResource CardBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="12">
                        <StackPanel IsEnabled="{Binding Enabled}">
                            <CheckBox Content="启用无后坐力"
                                      IsChecked="{Binding NoRecoilEnabled, Mode=TwoWay}"
                                      FontWeight="SemiBold"
                                      Foreground="{StaticResource ForegroundBrush}"
                                      Margin="0,0,0,10" />

                            <TextBlock Text="调整写入内存的后坐力和枪口晃动值。100% 完全移除后坐力；0% 保持原始设置。"
                                       TextWrapping="Wrap"
                                       Foreground="{StaticResource MutedBrush}"
                                       FontSize="12"
                                       Margin="0,0,0,10" />

                            <!-- 后坐力降低量 -->
                            <StackPanel Margin="0,6,0,0" IsEnabled="{Binding NoRecoilEnabled}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="160" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="后坐力降低"
                                               Foreground="{StaticResource ForegroundBrush}" />
                                    <TextBlock Text="{Binding NoRecoilAmount, StringFormat='{}{0:F0}%'}"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource AccentBrush}"
                                               Grid.Column="1"
                                               HorizontalAlignment="Right" />
                                </Grid>
                                <Slider Value="{Binding NoRecoilAmount, Mode=TwoWay}"
                                        Minimum="0"
                                        Maximum="100"
                                        TickFrequency="5"
                                        IsSnapToTickEnabled="True"
                                        Margin="0,6,0,0" />
                            </StackPanel>

                            <!-- 晃动降低量 -->
                            <StackPanel Margin="0,12,0,0" IsEnabled="{Binding NoRecoilEnabled}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="160" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="枪口晃动降低"
                                               Foreground="{StaticResource ForegroundBrush}" />
                                    <TextBlock Text="{Binding NoSwayAmount, StringFormat='{}{0:F0}%'}"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource AccentBrush}"
                                               Grid.Column="1"
                                               HorizontalAlignment="Right" />
                                </Grid>
                                <Slider Value="{Binding NoSwayAmount, Mode=TwoWay}"
                                        Minimum="0"
                                        Maximum="100"
                                        TickFrequency="5"
                                        IsSnapToTickEnabled="True"
                                        Margin="0,6,0,0" />
                            </StackPanel>

                            <Border Background="#1A1618"
                                    BorderBrush="{StaticResource WarningBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="10"
                                    Margin="0,12,0,0">
                                <StackPanel>
                                    <TextBlock Text="检测风险：高"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource WarningBrush}" />
                                    <TextBlock Text="直接修改内存中的武器行为，容易被检测标记。"
                                               TextWrapping="Wrap"
                                               Foreground="{StaticResource MutedBrush}"
                                               FontSize="12"
                                               Margin="0,4,0,0" />
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </GroupBox>

                <!-- 无限体力 -->
                <GroupBox Header="无限体力" Margin="0,0,12,12">
                    <Border Background="{StaticResource CardBackgroundBrush}"
                            BorderBrush="{StaticResource CardBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="12">
                        <StackPanel IsEnabled="{Binding Enabled}">
                            <CheckBox Content="启用无限体力"
                                      IsChecked="{Binding InfiniteStaminaEnabled, Mode=TwoWay}"
                                      FontWeight="SemiBold"
                                      Foreground="{StaticResource ForegroundBrush}"
                                      Margin="0,0,0,10" />

                            <TextBlock Text="当体力和氧气降至约三分之一以下时自动补充。"
                                       TextWrapping="Wrap"
                                       Foreground="{StaticResource MutedBrush}"
                                       FontSize="12"
                                       Margin="0,0,0,6" />

                            <TextBlock Text="同时尝试绕过疲劳状态，避免移动惩罚。"
                                       TextWrapping="Wrap"
                                       Foreground="{StaticResource MutedBrush}"
                                       FontSize="12"
                                       Margin="0,0,0,10" />

                            <Border Background="#1A1618"
                                    BorderBrush="{StaticResource WarningBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Padding="10"
                                    Margin="0,6,0,0">
                                <StackPanel>
                                    <TextBlock Text="检测风险：中"
                                               FontWeight="SemiBold"
                                               Foreground="{StaticResource WarningBrush}" />
                                    <TextBlock Text="玩家属性修改相比后坐力移除没那么明显，但仍可被检测。"
                                               TextWrapping="Wrap"
                                               Foreground="{StaticResource MutedBrush}"
                                               FontSize="12"
                                               Margin="0,4,0,0" />
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </GroupBox>

            </UniformGrid>

        </StackPanel>
    </ScrollViewer>
</UserControl>